<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    android:layout_margin="@dimen/_10sdp"
    android:background="@drawable/editext_shape"
    android:backgroundTint="@color/primary_red"
    android:gravity="center"
    android:layout_gravity="center"
    android:outlineSpotShadowColor="@color/primary_red"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_weight="10"
        android:layout_margin="@dimen/_30sdp"
        app:cardBackgroundColor="#EEEDE7"
        app:cardCornerRadius="@dimen/_600sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtkeytitle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:background="@null"
            android:fontFamily="@font/mono"
            android:hint="Create New Title Key..."
            android:paddingStart="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp" />


    </androidx.cardview.widget.CardView>



</LinearLayout>